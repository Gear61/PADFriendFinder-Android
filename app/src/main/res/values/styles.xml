<resources>

    <!-- Base application theme. -->
    <style name="AppStyles" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
           parent="@style/Widget.AppCompat.Light.ActionBar.Solid">

        <!-- Support library compatibility -->
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
        <item name="titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
        <item name="android:background">@color/app_blue</item>
        <item name="background">@color/app_blue</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <!-- Change pop up theme -->
    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">#000</item>
    </style>

</resources>