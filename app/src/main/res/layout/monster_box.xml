<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <ProgressBar
        android:id="@+id/loading_monsters"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/monster_box_instructions"
        android:visibility="gone"
        android:text="@string/monster_box_instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <TextView
        android:id="@+id/no_monsters"
        android:visibility="gone"
        android:text="@string/no_monsters"
        android:textSize="28sp"
        android:layout_below="@+id/monster_box_instructions"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ListView
        android:id="@+id/monster_list"
        android:layout_below="@+id/monster_box_instructions"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>

</RelativeLayout>