<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/find_friends"
            android:contentDescription="@string/find_friends"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@mipmap/find_friends"
            android:layout_width="150dp"
            android:layout_height="150dp"/>

        <ImageButton
            android:id="@+id/monster_box"
            android:contentDescription="@string/monster_box"
            android:background="@null"
            android:layout_marginTop="25dp"
            android:scaleType="fitXY"
            android:src="@mipmap/monster_box"
            android:layout_width="150dp"
            android:layout_height="150dp"/>
    </LinearLayout>
</RelativeLayout>
