<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.randomappsinc.padfriendfinder.Activities.OthersBoxActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_pad_id"
        android:id="@+id/PAD_ID"
        android:singleLine="true"
        android:inputType="number"
        android:maxLength="9"
        android:imeOptions="actionSearch"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.beardedhen.androidbootstrap.FontAwesomeText
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fontawesometext:fa_icon="@string/star_icon"
            android:textColor="@color/silver"
            android:id="@+id/star_icon"
            android:textSize="48sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:id="@+id/entered_id"
            android:text=""
            android:textSize="32sp"
            android:layout_toLeftOf="@+id/star_icon"/>
    </RelativeLayout>

</LinearLayout>
