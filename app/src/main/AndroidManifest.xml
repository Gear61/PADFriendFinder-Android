<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.randomappsinc.padfriendfinder" >

    <application
        android:name="com.randomappsinc.padfriendfinder.Misc.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activities.MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.PadIdActivity"
            android:screenOrientation="portrait"
            android:label="@string/pad_id_label" >
        </activity>
        <activity
            android:name=".Activities.MonsterFormActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Activities.MonsterBoxActivity"
            android:screenOrientation="portrait"
            android:label="@string/monster_box_label" >
        </activity>
        <activity
            android:name=".Activities.FriendResultsActivity"
            android:screenOrientation="portrait"
            android:label="@string/friend_results_label" >
        </activity>
    </application>

</manifest>
