<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.randomappsinc.padfriendfinder" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Misc.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/CustomActionBarTheme" >
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.PadIdActivity"
            android:label="@string/pad_id_label"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible">
        </activity>
        <activity
            android:name=".Activities.MonsterFormActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
        </activity>
        <activity
            android:name=".Activities.FriendResultsActivity"
            android:label="@string/friend_results_label"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Activities.OthersBoxActivity"
            android:label="@string/title_activity_others_box"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Activities.FavoritesActivity"
            android:label="@string/favorites_label"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Activities.SettingsActivity"
            android:label="@string/settings"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".SupportedLeadsActivity"
            android:windowSoftInputMode="stateHidden"
            android:label="@string/supported_leads_label"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
